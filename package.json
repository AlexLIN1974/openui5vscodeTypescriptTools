{
  "name": "ui5-ts",
  "displayName": "openui5 Typescript Tool",
  "description": "A typescript extension for openui5",
  "version": "0.0.1",
  "publisher": "apazureck",
  "engines": {
    "vscode": "^1.5.0"
  },
  "author": {
    "name": "Andreas Pazureck",
    "email": "andreas@pazureck.de",
    "url": "www.pazureck.de"
  },
  "icon": "./img/OpenUI5_logo.png",
  "categories": [
    "Productivity"
  ],
  "activationEvents": [
    "onCommand:ui5ts.SetupUi5",
    "workspaceContains:manifest.json"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "manifest.json",
        "url": "./jsonschemas/manifest.schema.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/typescript.json."
      }
    ],
    "commands": [
      {
        "category": "UI5",
        "command": "ui5ts.SetupUi5",
        "title": "UI5: Create new UI5 Project (alpha)"
      },
      {
        "category": "UI5",
        "command": "ui5ts.SwitchToController",
        "title": "UI5: Swtich to Controller"
      },
      {
        "category": "UI5",
        "command": "ui5ts.SwitchToView",
        "title": "UI5: Swtich to View"
      },
      {
        "category": "UI5",
        "command": "ui5ts.GoToDefinition",
        "title": "UI5: Go to Definition"
      }
    ],
    "keybindings": [
      {
        "command": "ui5ts.SwitchToController",
        "key": "f7",
        "when": "editorTextFocus"
      },
      {
        "command": "ui5ts.SwitchToView",
        "key": "shift+f7",
        "when": "editorTextFocus"
      },
      {
        "command": "ui5ts.GoToDefinition",
        "key": "shift+f12",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "@types/fs-finder": "^1.8.28",
    "linq-es5": "^1.11.5",
    "ncp": "^2.0.0",
    "recursive-readdir": "^2.1.0"
  },
  "extensionDependencies": [
    "msjsdiag.debugger-for-chrome",
    "msjsdiag.debugger-for-edge",
    "hbenl.vscode-firefox-debug"
  ]
}
